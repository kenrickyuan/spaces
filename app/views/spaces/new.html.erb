

<div class="newspace-inner-body">
  <body style="background-image: url(<%= random_bg %>)">
    <div class="container-newspace">

      <h1 class="form-h1">List Your Space</h1>

      <%= simple_form_for [@user, @space] do |f| %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :category, collection: ['house party', 'wedding', 'festival']%>
        <%= f.input :max_occupancy %>
        <%= f.input :location %>
        <%= f.input :description %>
        <%= f.input :price_per_hour %>
      </div>
      <div class="form-submit-btn d-flex justify-content-center">

      <%= f.button :submit, "Add Your Space", { class: 'login-btn' , id: 'new-space-login-btn'}  %>
      </div>
      <% end %>
    </div>
  </div>
